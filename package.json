{
  "name": "secure-password-manager",
  "version": "2.0.0",
  "description": "A secure password manager with AES-256-GCM encryption, Argon2 hashing, Web API and React frontend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-renderer",
    "copy-renderer": "mkdir -p dist/gui/renderer && cp src/gui/renderer/*.html src/gui/renderer/*.css src/gui/renderer/*.js dist/gui/renderer/",
    "build:prod": "npm run build && npm run frontend:build && npm run copy-frontend-to-dist",
    "copy-frontend-to-dist": "mkdir -p dist/public && cp -r frontend/build/* dist/public/",
    "start": "node dist/index.js",
    "start:api": "node dist/web/server.js",
    "dev": "ts-node src/index.ts",
    "dev:api": "ts-node src/web/server.ts",
    "cli": "ts-node --project tsconfig.json src/index.ts",
    "cli:clean": "rm -rf node_modules/.cache .ts-node && ts-node src/index.ts",
    "electron": "npm run build && electron dist/gui/main.js",
    "frontend": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "build:all": "npm run build && npm run frontend:build",
    "test": "jest",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "password-manager",
    "security",
    "encryption",
    "aes-256-gcm",
    "argon2",
    "typescript",
    "web-security",
    "csrf",
    "xss-prevention"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "argon2": "^0.31.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "electron": "^28.1.0",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "sql.js": "^1.10.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.10.6",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^9.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
